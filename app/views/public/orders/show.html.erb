<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <h5>注文履歴詳細</h5>
        <table class="table table-hover table-inverse">
          <p>注文情報</p>
          <tr>
            <th>注文日</th>
            <td>
              <%= @order.created_at.strftime('%Y/%m/%d') %>
            </td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.delivery_postal_code %><br>
              <%= @order.delivery_address %><br>
              <%= @order.delivery_name %>
            </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td>
              <%= @order.payment_method_i18n %>
            </td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <%= @order.order_status_i18n %>
            </td>
          </tr>
        </table>

        <table class="table table-hover table-inverse">
          <p>請求情報</p>
          <tr>
            <th>商品合計</th>
            <td>
              <%= @order.total_payment-800 %>
            </td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>
              <%= 800 %>
            </td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td>
              <%= @order.total_payment %>
            </td>
          </tr>
        </table>

      <table class="table table-hover table-inverse">
        <p>注文内容</p>
        <% @order_products.each do |order_product| %>
          <tr>
            <td>
              <%= order_product.product.name %>
            </td>
            <td>
              <%= order_product.product.include_tax.round %>
            </td>
            <td>
              <%= order_product.amount %>
            </td>
            <td>
              <%= (order_product.product.include_tax*order_product.amount).round %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
