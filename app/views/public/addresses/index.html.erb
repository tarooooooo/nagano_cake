<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <h2>配送先登録/一覧</h2>
      <div class="container">
        <%= form_with model: @address, local: true do |f| %>

        <div class="form-group row md-3">
          <div class="col-sm-2 col-form-label">
            <label>郵便番号</label>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row md-3">
          <div class="col-sm-2 col-form-label">
            <label>住所</label>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row md-3">
          <div class="col-sm-2 col-form-label">
            <lavel>宛名</lavel>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="container">
        <div class="row">
          <table class="table table-borderd">
            <therd>
              <tr class="table-active">
                <th class="col-2">郵便番号</th>
                <th class="col-4">住所</th>
                <th class="col-2">宛名</th>
                <th colspan="2"></th>
              </tr>
            </therd>
            <tbody>
              <% @addresses.each do |address| %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to "編集する", edit_address_path(address), class: "btn btn-outline-success" %>
                </td>
                <td>
                  <%= link_to "削除する", address_path(address), data: { confirm: '本当に消しますか？' }, method: :delete, class: "btn btn-outline-danger" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>