<div class="d-flex justify-content-between m-5">
  <h5>ショッピングカート</h5>
  <%= link_to 'カートを空にする', cart_products_destroy_all_path, method: :delete, class: "btn btn-danger" %>
</div>

<div class="col-md-8 offset-md-1 m-3">
  <table class="table table-hover table-inverse">
    <% @cart_products.each do |cart_product| %>
      <thread>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
        <tbody>
          <tr>
            <td>
              <%= cart_product.name %>
            </td>
            <td>
              <%= cart_product.price %>
            </td>
            <td>
              <%= f.select :amount, options_for_select(@numbers, {selected: cart＿product.amount} ) %>
              <%= link_to '変更', cart_product_path(cart_product), class: "btn btn-success" %>
            </td>
            <td>
              <%= cart_product.price*cart_product.amount %>
            </td>
            <td>
              <%= link_to '削除する', cart_product_path(cart_product), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        </tbody>
      </thread>
    <% end %>
  </table>
  
  <div class="d-flex justify-content-between m-5">
    <%= link_to '買い物を続ける', products_path, class: "btn btn-info" %>
    <tr>
      <th>合計金額</th>
      <th></th>
    </tr>
  </div>
</div>