                    </div>
                  </li>
                </ul>
              <% elsif admin_signed_in? %>
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active">
                    <div class="social">
                      <%= link_to '商品一覧', admin_products_path, class: 'nav-link' %>
                    </div>
                  </li>
                  <li class="nav-item">
                    <div class="social">
                      <%= link_to '会員一覧', admin_customers_path, class: 'nav-link' %>
                    </div>
                  </li>
                  <li class="nav-item">
                    <div class="social">
