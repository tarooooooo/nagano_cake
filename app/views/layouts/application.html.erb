<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">LOGO画像</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if custmer_signed_in? %>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'マイページ', custmer_path(current_custmer.id), class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '商品一覧', products_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'カート', cart_products_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'ログアウト', destroy_custmer_session_path, method: :delete, class: 'nav-link text-light' %>
                  </div>
                </li>
                
              <% elsif custmer_signed_out? %>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'About', about_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '商品一覧', root_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '新規登録', new_custmer_registration_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'ログイン', custmer_session_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '商品一覧', admin_products_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '会員一覧', admin_custmers_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '注文履歴一覧', admin_orders_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'ログイン', admin_session_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                
              <% else %>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'About', about_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '商品一覧', products_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to '新規登録', new_custmer_registration_path, class: 'nav-link text-light' %>
                  </div>
                </li>
                <li class="nav-item">
                  <div class="social">
                    <%= link_to 'ログイン', custmer_session_path, class: 'nav-link text-light' %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
