<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <div class="container">
    <h2>商品詳細</h2>
    <div class="row">
      <div class ="col-sm-12 col-md-6 col-lg-5">
        <%= attachment_image_tag @product, :image, :fill, 250, 200, format: 'jpeg' %>
      </div>
      <div class ="col-sm-12 col-md-6 col-lg-7">
        <table class="table">
          <tr>
            <th>商品名</th>
            <th><%= @product.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @product.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @product.genre.name %></th>
          </tr>
          <tr>
            <th>
              税込価格<br>
              (税抜価格)
            </th>
            <th><%= @product.price %> (<%= @product.include_tax.round %>)円</th>
          </tr>
          <tr>
            <th class="text-nowrap pr-3">販売ステータス</th>

            <% if @product.sales_status_before_type_cast == 0 %>
              <th class="text-success"><%= @product.sales_status_i18n %></th>
            <% elsif @product.sales_status_before_type_cast == 1 %>
              <th class="text-muted"><%= @product.sales_status_i18n %></th>
            <% end %>

          </tr>
          <tr>
           <td>
            <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-success text-nowrap" %>
           </td>
           <td>
            <%= link_to "削除する", admin_product_path, method: :delete, class: "btn btn-danger", data: {confirm: "本当に消しますか？"} %>
           </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
