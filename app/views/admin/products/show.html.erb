<h2>商品詳細</h2>
<div class="container">
  <div class="row">
    <div class ="col-sm-7 col-lg-5">
      <%= attachment_image_tag @product, :image, :fill, 200, 150, format: 'jpeg' %>
    </div>
    <div class ="col-sm-5 col-lg-7">
      <table>
        <tr>
          <th>商品名</th>
          <th><%= @product.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @product.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @product.genre.name %></th>
        </tr>
        <tr>
          <th>
            税込価格<br>
            (税抜価格)
          </th>
          <th><%= @product.price %> (<%= @product.include_tax.round %>)円</th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th class="text-success"><%= @product.sales_status_i18n %></th>
        </tr>
        <tr>
         <td>
          <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-success" %>
         </td>
         <td>
          <%= link_to "削除する", admin_product_path, method: :delete, class: "btn btn-danger", data: {confirm: "本当に消しますか？"} %>
         </td>
        </tr>
      </table>
    </div>
  </div>
</div>
