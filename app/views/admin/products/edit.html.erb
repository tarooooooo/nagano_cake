<h2>商品編集</h2>

<%= form_with model: [:admin, @product], local:true do |f| %>

  <table>
    <tbody>
      <tr>
        <td>商品画像</td>
        <td>
      　  <%= f.attachment_field :image %>
        </td>
      </tr>
      <tr>
        <td>商品名</td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td>
          <%= f.text_area :introduction, placeholder: "商品名"%>
        </td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td>
          <%#= f.number_field :genre_id %>
        </td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td>
          <%= f.text_field :price, placeholder: "1000" %>円
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.select :sales_status, Product.sales_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '変更を保存', class: "btn btn-success"  %>

<% end %>