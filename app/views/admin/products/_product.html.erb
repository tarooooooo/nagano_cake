<table>
  <tbody>
    <tr>
      <td>商品画像</td>
      <td>
    　  <%= f.attachment_field :image %>
      </td>
    </tr>
    <tr>
      <td>商品名</td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td>
        <%= f.text_area :introduction, placeholder: "商品名"%>
      </td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td>
        <%#= f.number_field :genre_id %>
      </td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td>
        <%= f.text_field :price, placeholder: "1000" %>円
      </td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <%= select :sales_statuses,:name,Product.sales_statuses.keys.to_a %>
      </td>
    </tr>
  </tbody>
</table>