<h2>商品一覧</h2>
<%= link_to "+", new_admin_product_path %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @products.each do |product| %>
  <tbody> 
    <tr>
      <td><%= product.id.to_s %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.genre %></td>
      <td><%= product.sales_status %></td>
    </tr>
  </tbody>
</table>