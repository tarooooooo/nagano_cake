<h2>商品新規登録</h2>

<%= form_with model: [:admin, @product], local:true do |f| %>

  <table>
    <tbody>
      <tr>
        <td>商品画像</td>
        <td>
    　    <%= f.attachment_field :image %>
        </td>
      </tr>
      <tr>
        <td>商品名</td>
        <td>
          <%= f.text_field :name, placeholder: "商品名"%>
        </td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します"%>
        </td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td>
            <%#= f.collection_select :genre_id, Genre.all, :id, :name %>
        </td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td>
           <%= f.text_field :price, placeholder: "1000" %>円
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <%#= f.select :sales_status, Product.sales_statuses.keys,{include_blank: '選択してください'},{class: "exhibition__select"} %>
          <%= f.radio_button :sales_status, "販売中"  %>
          <%= f.label :販売中, class: "job_type_label" %>
        </td>
        <td>
          <%= f.radio_button :sales_status, "販売停止中" %>
          <%= f.label :販売停止中, class: "job_type_label" %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '新規登録', class: "btn btn-success"  %>

<% end %>

