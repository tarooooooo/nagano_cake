
<h2>商品新規登録</h2>
<div class="container">
  <div class="row">
    <div class ="col-12 px-sm-0 mx-auto">

      <%= form_with model: [:admin, @product], local:true do |f| %>
      
        <table>
          <tbody>
            <tr>
              <td>商品画像</td>
              <td>
                <%= f.attachment_field :image, class:"form-control-file" %>
              </td>
            </tr>
            <tr>
              <td>商品名</td>
              <td >
                <%= f.text_field :name, placeholder: "商品名", class:"form-control"%>
              </td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td>
                <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class:"form-control" %>
              </td>
            </tr>
            <div class="form-group">
            <tr>
              <td>ジャンル</td>
              <td>
                  <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {:class => "form-control"} %>
              </td>
            </tr>
            </div>
            <tr>
              <td>税抜価格</td>
              <td>
                 <%= f.text_field :price, placeholder: "1000", class:"form-control" %>円
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <%#= f.select :sales_status, Product.sales_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
                <%= f.radio_button :sales_status, :on_sale %>
                <%= f.label :販売中, class: "job_type_label" %>
                <%= f.radio_button :sales_status, :stop_sale %>
                <%= f.label :販売停止中, class: "job_type_label" %>
              </td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td>
              <%= f.submit '新規登録', class: "btn btn-success"  %>
              </td>
            </tr>
          </tbody>
        </table>
      
      <% end %>

    </div>
  </div>
</div>