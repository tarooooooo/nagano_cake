<div class="col-md-8 offset-md-1">
  <h2>ジャンル一覧・追加</h2>
  <div class="create_genres">
    <%= form_with model: [:admin, @genre], local:true do |f| %>
      <div class="form-group">
        <label for="genre_name">ジャンル名</label>
        <%= f.text_field :name %>
        <button class="btn btn-success"><% f.submit "新規登録" %>新規登録</button>
      </div>
    <% end %>
  </div>
  <table class="table table-hover table-inverse">
    <thread>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </thread>
  </table>
</div>